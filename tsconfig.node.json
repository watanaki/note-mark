{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "node16",
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/main/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ]
    },
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/types/**/*",
    "src/shared/**/*"
  ]
}